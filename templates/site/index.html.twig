{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/base.css") }}">
{% endblock %}
{% block body %}
    <h1>Sites</h1>

    <table class="table" style="text-align: center;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.id }}</td>
                <td>{{ site.nom }}</td>
                <td>
                    <a href="{{ path('app_site_show', {'id': site.id}) }}">show</a>
                    <a href="{{ path('app_site_edit', {'id': site.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_site_new') }}">Créer</a>
{% endblock %}
