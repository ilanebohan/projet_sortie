{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Site{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/base.css") }}">
{% endblock %}
{% block body %}
    <div class="container text-center">
        <h1>Sites</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for site in sites %}
                <tr>
                    <td>Campus {{ site.nom }}</td>
                    <td>
                        <a href="{{ path('app_site_show', {'id': site.id}) }}" class="btn btn-secondary">Afficher</a>
                        <a href="{{ path('app_site_edit', {'id': site.id}) }}" class="btn btn-secondary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    <a href="{{ path('app_site_new') }}" class="btn btn-primary">Ajouter un Site</a>
{% endblock %}
