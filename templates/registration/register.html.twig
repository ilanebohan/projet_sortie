{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Inscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}

<div class="erreursInscription">
    {{ form_errors(registrationForm) }}
</div>


{{ form_start(registrationForm, { 'attr' : { 'class': 'registerForm' } }) }}
<h1>Inscription</h1>

<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-5">

            <div class="erreursInscription">
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="form-outline mb-4">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, { 'attr' : { 'class': 'form-control' } }) }}
            </div>
            <div class="erreursInscription">
                {{ form_errors(registrationForm.nom) }}
            </div>
            <div class="form-outline mb-4">
                {{ form_label(registrationForm.nom) }}
                {{ form_widget(registrationForm.nom, { 'attr' : { 'class': 'form-control' } }) }}
            </div>
            <div class="erreursInscription">
                {{ form_errors(registrationForm.prenom) }}
            </div>
            <div class="form-outline mb-4">
                {{ form_label(registrationForm.prenom) }}
                {{ form_widget(registrationForm.prenom, { 'attr' : { 'class': 'form-control' } }) }}
            </div>
            <div class="erreursInscription">
                {{ form_errors(registrationForm.telephone) }}
            </div>
            <div class="form-outline mb-4">
                {{ form_label(registrationForm.telephone) }}
                {{ form_widget(registrationForm.telephone, { 'attr' : { 'class': 'form-control' } }) }}
            </div>
            <div class="erreursInscription">
                {{ form_errors(registrationForm.site) }}
            </div>
            <div class="form-outline mb-4">
                {{ form_label(registrationForm.site) }}
                {{ form_widget(registrationForm.site, { 'attr' : { 'class': 'form-select' } }) }}
            </div>
        </div>
        <div class="erreursInscription">
            {{ form_errors(registrationForm.administrateur) }}
        </div>
        <div class="form-outline mb-4">
            {{ form_label(registrationForm.administrateur) }}
            {{ form_widget(registrationForm.administrateur, { 'attr' : { 'class': 'form-check-input' } }) }}
        </div>
        <div class="erreursInscription">
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>
        <div class="form-outline mb-4">
            {{ form_label(registrationForm.agreeTerms) }}
            {{ form_widget(registrationForm.agreeTerms, { 'attr' : { 'class': 'form-check-input' } }) }}
            <p>(<a class="" href="/cgu">ici</a>)</p>
        </div>
        <div class="form-outline mb-4">
            {{ form_row(registrationForm.image, { 'attr' : { 'class': 'form-control' } }) }}
        </div>
        <button type="submit" class="btn btn-primary">Inscription</button>
        {{ form_end(registrationForm) }}
        {% endblock %}
