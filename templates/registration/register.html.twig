{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Inscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}


    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, { 'attr' : { 'class': 'registerForm' } }) }}
    <h1>Inscription</h1>
<div class="form-outline mb-4">
        {{ form_row(registrationForm.email, { 'attr' : { 'class': 'form-control' } }) }}
</div>
<div class="form-outline mb-4">
        {{ form_row(registrationForm.login, { 'attr' : { 'class': 'form-control' } }) }}
</div>
<div class="form-outline mb-4">
    {{ form_row(registrationForm.plainPassword.first, { 'attr' : { 'class': 'form-control' } }) }}
</div>
    <div class="form-outline mb-4">
    {{ form_row(registrationForm.plainPassword.second, { 'attr' : { 'class': 'form-control' } }) }}
</div>
<div class="form-outline mb-4">
        {{ form_row(registrationForm.nom, { 'attr' : { 'class': 'form-control' } }) }}
    </div>
    <div class="form-outline mb-4">
        {{ form_row(registrationForm.prenom, { 'attr' : { 'class': 'form-control' } }) }}
    </div>
<div class="form-outline mb-4">
        {{ form_row(registrationForm.telephone, { 'attr' : { 'class': 'form-control' } }) }}
        </div>
<div class="form-outline mb-4">
        {{ form_row(registrationForm.administrateur, { 'attr' : { 'class': 'form-check-input' } }) }}
</div>
<div class="form-outline mb-4">
        {{ form_row(registrationForm.agreeTerms, { 'attr' : { 'class': 'form-check-input' } }) }}
    </div>
    {{ form_row(registrationForm.site) }}
        <button type="submit" class="btn btn-primary">Inscription</button>
    {{ form_end(registrationForm) }}
{% endblock %}
