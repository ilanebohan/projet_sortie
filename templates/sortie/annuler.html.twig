{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Annuler une sortie{% endblock %}
{% block body %}
    <h1>Annuler une sortie</h1>

    {{ form_errors(sortieForm) }}
    <table class="table">
        <tbody>
        <tr>
            <th>Nom de la sortie</th>
            <td>{{ sortie.nom }}</td>
        </tr>
        <tr>
            <th>Date de la sortie</th>
            <td>{{ sortie.dateDebut|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Ville organisatrice</th>
            <td>{{ sortie.siteOrganisateur }}</td>
        </tr>
        <tr>
            <th>Lieu</th>
            <td>{{ sortie.lieu }}</td>
        </tr>
        <tr>
            <th>Motif</th>
            <td> {{ form_start(sortieForm) }}
                {{ form_end(sortieForm) }}</td>
        </tr>
        </tbody>
    </table>


{% endblock %}