{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/base.css") }}">
{% endblock %}
{% block body %}
    <h1>Lieux</h1>

    <table class="table" style="text-align: center;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Rue</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.id }}</td>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.rue }}</td>
                <td>{{ lieu.latitude }}</td>
                <td>{{ lieu.longitude }}</td>
                <td>
                    <a href="{{ path('app_lieu_show', {'id': lieu.id}) }}">show</a>
                    <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lieu_new') }}">Créer</a>
{% endblock %}
