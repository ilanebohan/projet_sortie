{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Lieu{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/base.css") }}">
{% endblock %}
{% block body %}
    <div class="container text-center">
        <h1>Lieux</h1>
    </div>
    <div class="text-center">
        <a href="{{ path('app_lieu_new') }}" class="btn btn-outline-info center">Ajouter un Lieu</a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Rue</th>
                <th>Ville</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lieu in lieux %}
                <tr>
                    <td>{{ lieu.nom }}</td>
                    <td>{{ lieu.rue }}</td>
                    <td>{{ lieu.ville.nom }}</td>
                    <td>{{ lieu.latitude }}</td>
                    <td>{{ lieu.longitude }}</td>
                    <td>
                        <a href="{{ path('app_lieu_show', {'id': lieu.id}) }}" class="btn btn-secondary">Afficher</a>
                        <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}" class="btn btn-secondary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
