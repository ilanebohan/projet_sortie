<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sorties{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset("css/base.css") }}">
        <link rel="icon" href="{{ asset("img/favicon.png") }}" type="image/png">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href ="/"><img src="{{ asset("img/logo.png") }}" alt="logo">Sorties </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED') %}
                        <li><a class="nav-link" href="{{ path('user_edit') }}" title="monProfil">Mon Profil</a></li>
                        <li><a class="nav-link" href="{{ path('app_logout') }}" title="Connexion">Déconnexion</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a class="nav-link" href="{{ path('app_lieu_index') }}" title="Lieux">Lieux</a></li>
                            <li><a class="nav-link" href="{{ path('app_ville_index') }}" title="Villes">Villes</a></li>
                            <li><a class="nav-link" href="{{ path('app_site_index') }}" title="Sites">Sites</a></li>
                            <li><a class="nav-link" href="{{ path('app_register') }}" title="CreateUser">Création utilisateur</a></li>
                        {% endif %}
                    {% else%}
                        <li><a class="nav-link" href="{{ path('app_login') }}" title="Connexion">Connexion</a></li>
                    {% endif %}

                    {% if app.user %}
                        <h6 style="right:5%;position: absolute;"> Bonjour  <a href="{{ path('app_main') }}">{{ app.user.login }} ! </a> </h6>
                        {% endif %}
                </ul>
            </div>
        </nav>
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
