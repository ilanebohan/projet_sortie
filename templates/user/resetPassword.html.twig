{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Confirmation du mot de passe{% endblock %}

{% block body %}
    {% if form_errors(form) %}
        <div class="alert alert-danger text-center">
            {{ form_errors(form) }}
        </div>
    {% endif %}
    {{ form_start(form) }}
    <div class="container text-center">
        {{ form_row(form.previousPassword, { 'attr' : { 'class': 'form-control' } }) }}
        {{ form_row(form.plainPassword.first, { 'attr' : { 'class': 'form-control' } }) }}
        {{ form_row(form.plainPassword.second, { 'attr' : { 'class': 'form-control' } }) }}
        {{ form_row(form.confirmer, { 'attr' : { 'class': 'btn btn-outline-primary' } }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
